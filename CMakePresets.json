{
  "version": 3,

"configurePresets": [
{
  "name": "ci",
  "binaryDir": "${sourceDir}/build",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Release",
    "CMAKE_CUDA_ARCHITECTURES": "72",
    "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/local"
  },
  "environment": {
    "CUDACXX": "/usr/local/cuda/bin/nvcc"
  }
},
{
  "name": "default",
  "binaryDir": "${sourceDir}/build",
  "cacheVariables": {"CMAKE_BUILD_TYPE": "Release",
    "mpi": true,
    "openmp": true}
},
{
  "name": "mac", "inherits": "default",
  "displayName": "MacOS",
  "description": "MacOS: OpenMP not used",
  "cacheVariables": {
    "openmp": false
  },
  "environment": {
    "FC": "gfortran-11"
  }
},
{
  "name": "intel", "inherits": "default",
  "displayName": "Intel oneAPI LLVM",
  "environment": {
    "CC": "icx",
    "FC": "ifx"
  }
}
],
"buildPresets": [
  {
    "name": "default",
    "configurePreset": "default"
  },
  {
    "name": "ci",
    "configurePreset": "ci"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "default",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "stopOnFailure": false
  }
}
]
}
